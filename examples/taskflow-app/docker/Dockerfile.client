FROM node:20-alpine

WORKDIR /app

# Copy package files
COPY package*.json ./

# Install dependencies
RUN npm install

# Copy source code
COPY src/client ./src/client
COPY src/shared ./src/shared
COPY tsconfig.json ./
COPY vite.config.ts ./
COPY index.html ./

# Expose Vite dev server port
EXPOSE 5173

# Start Vite dev server
CMD ["npm", "run", "dev:client"]
