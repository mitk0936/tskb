{
  "compilerOptions": {
    "rootDir": "../",
    "baseUrl": "../",
    "target": "esnext",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "outDir": "dist",
    "jsx": "react-jsx",
    "jsxImportSource": "tskb",
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "esModuleInterop": true
  },
  "include": ["./src/**/*.tskb.tsx"],
  "exclude": ["node_modules"]
}
