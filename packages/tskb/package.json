{
  "name": "tskb",
  "version": "0.2.0",
  "description": "TS Knowledge Base. A TypeScript-native DSL for expressing architectural intent as typed declarations. Produces renderable docs/diagrams and a queryable knowledge graph, supporting type-checked snippet references, semantic relations, and constraints.",
  "type": "module",
  "bin": {
    "tskb": "./dist/cli/index.js"
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "LICENSE"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./jsx-runtime": {
      "types": "./dist/jsx-runtime.d.ts",
      "import": "./dist/jsx-runtime.js"
    }
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "clean": "rimraf dist",
    "pack:test": "npm run build && npm pack",
    "prepublishOnly": "npm run clean && npm run build",
    "test": "echo \"Error: no test specified\" && exit 0"
  },
  "author": "Dimitar Mihaylov",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/mitk0936/tskb.git"
  },
  "keywords": [
    "typescript",
    "documentation",
    "architecture",
    "knowledge-graph",
    "docs-as-code",
    "architecture-as-code",
    "jsx",
    "tsx",
    "type-safe",
    "compiler",
    "validation",
    "ai",
    "graphviz",
    "monorepo",
    "diagrams",
    "visualization",
    "architectural-documentation",
    "dsl",
    "developer-tools",
    "code-documentation",
    "living-documentation",
    "static-analysis",
    "code-graph"
  ],
  "dependencies": {
    "fuse.js": "^7.1.0",
    "glob": "^13.0.0"
  },
  "peerDependencies": {
    "typescript": ">=5.0.0"
  },
  "devDependencies": {
    "typescript": "^5.9.3"
  }
}
